<% layout('/layouts/boilerplate') -%>

  <body>

    <div class="row mt-3">
      <h1 class="col-6 offset-3">SignUp on WanderLust</h1>
      <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
          <div class="mb-3"> <label name="username" class="form-label">Username</label>
            <input name="username" placeholder="Username" type="text" class="form-control" id="username" required />
          </div>


          <div class="mb-3"> <label name="email" class="form-label">Email :</label>
            <input name="email" placeholder="Email" type="text" class="form-control" required id="email" />
          </div>
          <div class="mb-3"> <label name="password" class="form-label">Password :</label>
            <input name="password" placeholder="Password" type="text" class="form-control" required id="email" />
          </div>

          <button class="btn btn-success">SignUp</button>

        </form>
      </div>
      </div>

  </body>