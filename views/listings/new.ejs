<% layout('/layouts/boilerplate') -%>

  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <br>
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
          <div class="mb-3"> <label name="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required />
            <div class="invalid-feedback">Please Enter Valid Title</div>
          </div>

          <div class="mb-3"> <label name="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback">Please Enter Valid Description</div>
          </div>
<!-- //image -->
          
          <div class="mb-3"> <label name="image" class="form-label">Upload Image </label>
            <input name="listing[image]" placeholder=" Image URL/Link" type="file" class="form-control" />
          </div>
          <div class="row">
            <div class="mb-3 col-md-4"> <label name="price" class="form-label">Price</label>
              <input name="listing[price]" placeholder="Enter Price" type="number " class="form-control" required />
              <div class="invalid-feedback">Please Enter Valid Price</div>
            </div>


            <div class="mb-3 col-md-8"> <label name="country" class="form-label">Country</label>
              <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control" required />
              <div class="invalid-feedback">Please Enter Valid Country</div>
            </div>
          </div>

          <div class="mb-3"> <label name="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control" required />
            <div class="invalid-feedback">Please Enter Valid Location</div>
          </div>

          <br />
          <button class="btn btn-dark add-btn">Add</button>
          <br>
          <br>
        </form>
      </div>
    </div>
  </body>